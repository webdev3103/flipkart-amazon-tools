{
  "name": "sacred-sutra-tools",
  "private": true,
  "version": "10.11.0",
  "type": "module",
  "homepage": "https://tool.sacredsutra.in/",
  "scripts": {
    "dev": "concurrently --names \"SEED,VITE\" --prefix-colors \"bgBlue.bold,bgYellow.bold,bgGreen.bold\" \"npm run seed:wait-and-run\" \"npm run dev:wait-and-start\"",
    "dev:wait-and-start": "node -e \"setTimeout(() => process.exit(0), 5000)\" && cross-env VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080 VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost VITE_FIREBASE_AUTH_EMULATOR_PORT=9099 VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost VITE_FIREBASE_STORAGE_EMULATOR_PORT=9199 vite",
    "dev:vite-only": "vite",
    "dev:emulator": "cross-env VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080 VITE_FIREBASE_AUTH_EMULATOR_HOST=localhost VITE_FIREBASE_AUTH_EMULATOR_PORT=9099 VITE_FIREBASE_STORAGE_EMULATOR_HOST=localhost VITE_FIREBASE_STORAGE_EMULATOR_PORT=9199 vite",
    "emulator:start": "firebase emulators:start --only auth,firestore,storage",
    "emulator:ui": "firebase emulators:start --only auth,firestore,storage --inspect-functions",
    "emulator:export": "firebase emulators:export ./firebase-data",
    "emulator:import": "firebase emulators:start --only auth,firestore,storage --import ./firebase-data",
    "emulator:reset": "firebase emulators:exec --only auth,firestore,storage \"npm run emulator:seed\"",
    "emulator:seed": "node scripts/seed-emulator.js",
    "seed:enhanced": "node scripts/seed-emulator.js",
    "seed:wait-and-run": "node -e \"setTimeout(() => process.exit(0), 4000)\" && npm run emulator:seed",
    "build": "tsc && vite build",
    "build:prod": "vite build",
    "build:mobile": "vite build --mode mobile --base=/",
    "preview": "vite preview",
    "serve:prod": "npm run build:prod && vite preview",
    "predeploy": "npm run build:prod",
    "deploy": "gh-pages -d dist",
    "deploy:storage-rules": "./deploy-storage-rules.sh",
    "deploy:all": "firebase deploy",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "lint-full": "npm run type-check && npm run lint",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:watch:coverage": "npm run test:coverage -- --watch",
    "test:ci": "npm run test -- --watchAll=false --verbose",
    "test:ci:json": "npm run test -- --watchAll=false --json --outputFile=test-results.json",
    "test:critical": "NODE_ENV=test jest --config jest.critical.config.cjs --verbose",
    "test:smoke": "NODE_ENV=test jest --config jest.smoke.config.cjs --verbose",
    "test:changed": "npm run test:ci -- --onlyChanged",
    "test:related": "npm run test:ci -- --findRelatedTests --passWithNoTests",
    "test:fast": "npm run test:critical && npm run test:smoke",
    "test:storage-rules": "firebase emulators:exec --only storage \"npm run test\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --project='Mobile*'",
    "test:e2e:debug": "playwright test --debug",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "smoke-test": "node scripts/smoke-tests.js",
    "smoke-test:prod": "SMOKE_TEST_URL=https://himanshu31shr.github.io/flipkart-amazon-tools node scripts/smoke-tests.js",
    "migrate:inventory:dry-run": "node scripts/migrations/add-inventory-fields.js --dry-run",
    "migrate:inventory:run": "node scripts/migrations/add-inventory-fields.js",
    "migrate:inventory:rollback": "node scripts/migrations/add-inventory-fields.js --rollback",
    "migrate:inventory:help": "node scripts/migrations/add-inventory-fields.js --help",
    "mobile:sync": "npx cap sync",
    "mobile:open:ios": "npx cap open ios",
    "mobile:open:android": "npx cap open android",
    "mobile:build:ios": "npm run build:mobile && npx cap sync ios",
    "mobile:build:android": "npm run build:mobile && npx cap sync android",
    "mobile:sync:dev": "npm run build:mobile && npx cap sync"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "npm run test:related"
    ]
  },
  "dependencies": {
    "@capacitor-firebase/app": "^7.3.1",
    "@capacitor-firebase/authentication": "^7.3.1",
    "@capacitor-firebase/firestore": "^7.3.1",
    "@capacitor-firebase/storage": "^7.3.1",
    "@capacitor-mlkit/barcode-scanning": "^7.3.0",
    "@capacitor/android": "^7.4.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@emotion/react": "latest",
    "@emotion/styled": "latest",
    "@hookform/resolvers": "^5.0.1",
    "@mui/icons-material": "^6.1.9",
    "@mui/lab": "^6.0.0-beta.14",
    "@mui/material": "latest",
    "@mui/x-date-pickers": "^8.4.0",
    "@reduxjs/toolkit": "^2.8.1",
    "@types/jspdf": "^1.3.3",
    "@types/qrcode": "^1.5.5",
    "@types/recharts": "^2.0.1",
    "date-fns": "^4.1.0",
    "firebase": "^11.6.1",
    "formik": "^2.4.6",
    "gh-pages": "^6.2.0",
    "jsbarcode": "^3.12.1",
    "jspdf": "^3.0.1",
    "papaparse": "^5.4.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^2.16.105",
    "qrcode": "^1.5.4",
    "quagga": "^0.12.1",
    "react": "latest",
    "react-dom": "latest",
    "react-hook-form": "^7.56.4",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.1",
    "recharts": "^2.15.3",
    "redux-persist": "^6.0.0",
    "vite-plugin-pwa": "^0.21.1",
    "xlsx": "^0.18.5",
    "yup": "^1.7.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jsbarcode": "^3.11.4",
    "@types/node": "^22.15.21",
    "@types/node-fetch": "^2.6.12",
    "@types/papaparse": "^5.3.15",
    "@types/pdfjs-dist": "^2.10.378",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.0.2",
    "@types/react-redux": "^7.1.34",
    "@types/testing-library__user-event": "^4.2.0",
    "@vitejs/plugin-react": "latest",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "canvas": "^3.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "firebase-admin": "^13.5.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.0.0",
    "sharp": "^0.34.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.3.2"
  },
  "volta": {
    "node": "22.16.0",
    "npm": "11.4.1"
  },
  "overrides": {
    "canvas": "^3.2.0"
  }
}
