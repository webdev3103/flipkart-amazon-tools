rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default rule - deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // PDF files storage rules with universal access for authenticated users
    // Structure: pdfs/{dateFolder}/{fileName}
    match /pdfs/{dateFolder}/{fileName} {
      // Allow all authenticated users to read, write, and list PDF files
      allow read, write, list: if request.auth != null;

      // Note: Universal access enabled for all authenticated users
      // Users can upload, view, delete, and list any PDF in any date folder
    }

    // Allow authenticated users to list the pdfs root folder
    match /pdfs/{dateFolder=**} {
      allow read, list: if request.auth != null;
    }

    // Allow admins to access all files
    match /{path=**} {
      allow read, write, list: if request.auth != null && request.auth.token.admin == true;
    }
  }
} 